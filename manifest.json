{
  "manifest_version": 2,
  "name": "Synapse",
  "version": "1.3.1",
  "description": "Browser extension for recording, processing and displaying FAST Tokens",
  
  "applications": {
    "gecko": {
      "id": "synapse@anthropic.com"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "idle",
    "notifications",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["dist/browser-polyfill.min.js", "dist/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/browser-polyfill.min.js", "dist/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Synapse"
  },
  
  "web_accessible_resources": [
    "dist/*"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}